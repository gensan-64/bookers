<h1>Books</h1>

<table>
  <tr>  <th>Title</th>  <th>Body</th>
</tr>
  <% @books.each do |list| %>
  <tr><td><%= list.title %></td> <td><%= list.body %></td> <td><%= link_to " Show ", book_path(list.id)  %></td><td><%= link_to " Edit ", edit_book_path(list.id) %></td> <td><%= link_to " Destroy ", book_path(list.id) , method: :delete%></td></tr>

<% end %>
</table>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>New Books</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>